<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.shef_er.groupmanager"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentListActivity"
            android:label="@string/title_activity_student_list" >
        </activity>
        <activity
            android:name=".StudentDetailsActivity"
            android:label="@string/title_activity_student_details" >
        </activity>
        <activity
            android:name=".GroupCreatorActivity"
            android:label="@string/title_activity_group_creator" >
        </activity>
        <activity
            android:name=".GroupEditorActivity"
            android:label="@string/title_activity_group_editor" >
        </activity>
        <activity
            android:name=".StudentCreatorActivity"
            android:label="@string/title_activity_student_creator" >
        </activity>
        <activity
            android:name=".StudentEditorActivity"
            android:label="@string/title_activity_student_editor" >
        </activity>
    </application>

</manifest>